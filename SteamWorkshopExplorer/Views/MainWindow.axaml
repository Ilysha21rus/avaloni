<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SteamWorkshopExplorer.ViewModels"
        x:Class="SteamWorkshopExplorer.Views.MainWindow"
        Title="Shapes Editor"
        Width="1800" Height="1200">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
            <Button Content="Delete" Click="OnClearClicked"/> 
            <Button Content="Add Ellipse" Click="OnEllipseMode"/>
            <Button Content="Add C Bezier" Click="OnBezierMode"/>
            <Button Content="Save" Click="OnSaveClicked"/>
            <Button Content="json" Click="OnLoadClicked"/>
        </StackPanel>
        
        <Canvas x:Name="DrawingCanvas" Background="White"
                PointerPressed="DrawingCanvas_PointerPressed"
                PointerMoved="DrawingCanvas_PointerMoved"
                PointerReleased="DrawingCanvas_PointerReleased"/>
    </DockPanel>
</Window>